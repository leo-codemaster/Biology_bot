bot.set_my_commands(commands)


@bot.message_handler(commands=["start"])
def greeting(message):
    bot.reply_to(message, '''–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç, –∫–æ—Ç–æ—Ä—ã–π —Ä–∞—Å—Å–∫–∞–∂–µ—Ç —Ç–µ–±–µ –æ —Å–∞–º—ã—Ö –≤–∞–∂–Ω—ã—Ö –æ—Ä–≥–∞–Ω–∞—Ö —Ç–≤–æ–µ–≥–æ —Ç–µ–ª–∞. –í—ã–±–∏—Ä–∞–π, —á—Ç–æ —Ç–µ–±—è –∏–Ω—Ç–µ—Ä–µ—Å—É–µ—Ç:
- üß† –ú–æ–∑–≥ (/brain)
- ‚ù§Ô∏è –°–µ—Ä–¥—Ü–µ (/heart)
- üß¨ –°–ø–∏–Ω–Ω–æ–π –º–æ–∑–≥ (/spinal_cord)
- üßê –í–∏–∫—Ç–æ—Ä–∏–Ω–∞ (/quiz)
- üî¨ –ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–π —Ñ–∞–∫—Ç (/interesting_fact)''')


user_context = {}


@bot.message_handler(commands=["brain"])
def inf_brain(message):
    user_context[message.chat.id] = 'brain'
    photo_url = "https://meduniver.com/Medical/Anatom/Img/golovnoi_mozg-2a.jpg"
    bot.send_photo(message.chat.id, photo_url)

    bot.reply_to(message, '''üß† –ú–æ–∑–≥ ‚Äî —ç—Ç–æ –≥–ª–∞–≤–Ω—ã–π –æ—Ä–≥–∞–Ω —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–π –Ω–µ—Ä–≤–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã. –û–Ω —É–ø—Ä–∞–≤–ª—è–µ—Ç –≤—Å–µ–º–∏ –ø—Ä–æ—Ü–µ—Å—Å–∞–º–∏ –≤ –æ—Ä–≥–∞–Ω–∏–∑–º–µ.
–í—ã–±–µ—Ä–∏—Ç–µ, –æ —á–µ–º —Ö–æ—Ç–∏—Ç–µ —É–∑–Ω–∞—Ç—å:
1. –°—Ç—Ä—É–∫—Ç—É—Ä–∞ –º–æ–∑–≥–∞
2. –û—Ç–¥–µ–ª—ã –º–æ–∑–≥–∞
3. –ö–∞–∫ –º–æ–∑–≥ —Ä–∞–±–æ—Ç–∞–µ—Ç
4. –ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ–∞–∫—Ç—ã
(–ù–∞–ø–∏—à–∏—Ç–µ —Ü–∏—Ñ—Ä—É, —á—Ç–æ–±—ã –≤—ã–±—Ä–∞—Ç—å —Ç–µ–º—É.)''')

@bot.message_handler(commands=["heart"])
def inf_heart(message):
    photo_url = "https://meduniver.com/Medical/luchevaia_diagnostika/Img/luchevaia_anatomia_serdca-1.jpg"
    bot.send_photo(message.chat.id, photo_url)
    user_context[message.chat.id] = 'heart'

    bot.reply_to(message, '''‚ù§Ô∏è –°–µ—Ä–¥—Ü–µ ‚Äî —ç—Ç–æ –º—ã—à–µ—á–Ω—ã–π –æ—Ä–≥–∞–Ω, –∫–æ—Ç–æ—Ä—ã–π –ø–µ—Ä–µ–∫–∞—á–∏–≤–∞–µ—Ç –∫—Ä–æ–≤—å –ø–æ –≤—Å–µ–º—É –æ—Ä–≥–∞–Ω–∏–∑–º—É. –û–Ω–æ –±—å–µ—Ç—Å—è –ø—Ä–∏–º–µ—Ä–Ω–æ 100 —Ç—ã—Å—è—á —Ä–∞–∑ –≤ –¥–µ–Ω—å!

–í—ã–±–µ—Ä–∏—Ç–µ, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–∑–Ω–∞—Ç—å:
1. –ö–∞–∫ —É—Å—Ç—Ä–æ–µ–Ω–æ —Å–µ—Ä–¥—Ü–µ
2. –ö–∞–∫ —Ä–∞–±–æ—Ç–∞–µ—Ç –∫—Ä–æ–≤–æ–æ–±—Ä–∞—â–µ–Ω–∏–µ
3. –ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ–∞–∫—Ç—ã –æ —Å–µ—Ä–¥—Ü–µ

(–ù–∞–ø–∏—à–∏—Ç–µ —Ü–∏—Ñ—Ä—É –¥–ª—è –≤—ã–±–æ—Ä–∞.)''')




@bot.message_handler(commands=["spinal_cord"])
def inf_spinalcord(message):
    # URL –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
    user_context[message.chat.id] = 'spinal_cord'
    photo_url = "https://meduniver.com/Medical/Anatom/Img/cns-11a.jpg"
    bot.send_photo(message.chat.id, photo_url)

    bot.reply_to(message, '''üß¨ –°–ø–∏–Ω–Ω–æ–π –º–æ–∑–≥ ‚Äî —ç—Ç–æ —á–∞—Å—Ç—å —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–π –Ω–µ—Ä–≤–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã, —Ä–∞—Å–ø–æ–ª–æ–∂–µ–Ω–Ω–∞—è –≤–Ω—É—Ç—Ä–∏ –ø–æ–∑–≤–æ–Ω–æ—á–Ω–æ–≥–æ —Å—Ç–æ–ª–±–∞.

–í—ã–±–µ—Ä–∏—Ç–µ, –æ —á–µ–º —Ö–æ—Ç–∏—Ç–µ —É–∑–Ω–∞—Ç—å:
1. –°—Ç—Ä–æ–µ–Ω–∏–µ —Å–ø–∏–Ω–Ω–æ–≥–æ –º–æ–∑–≥–∞
2. –ö–∞–∫ —Ä–∞–±–æ—Ç–∞—é—Ç —Ä–µ—Ñ–ª–µ–∫—Å—ã
3. –ò–Ω—Ç–µ—Ä–µ—Å–Ω—ã–µ —Ñ–∞–∫—Ç—ã –æ —Å–ø–∏–Ω–Ω–æ–º –º–æ–∑–≥–µ

(–ù–∞–ø–∏—à–∏—Ç–µ —Ü–∏—Ñ—Ä—É –¥–ª—è –≤—ã–±–æ—Ä–∞.)''')


@bot.message_handler(func=lambda message: message.text.isdigit())
def handle_choice(message):
    user_topic = user_context.get(message.chat.id)
    choice = message.text

    if user_topic == "brain":
        brain_responses = {
