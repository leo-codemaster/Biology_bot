        "–ú–æ–∑–≥ –Ω–µ –º–æ–∂–µ—Ç —Ö—Ä–∞–Ω–∏—Ç—å –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –≤ –≤–∏–¥–µ ¬´—Ñ–∞–π–ª–æ–≤¬ª, –∫–∞–∫ –∫–æ–º–ø—å—é—Ç–µ—Ä; –æ–Ω –∏—Å–ø–æ–ª—å–∑—É–µ—Ç —Å–ª–æ–∂–Ω—ã–µ —Å–µ—Ç–∏.",
        "–û—Å–æ–∑–Ω–∞–Ω–Ω–æ—Å—Ç—å –∏ –º–µ–¥–∏—Ç–∞—Ü–∏—è –º–æ–≥—É—Ç –∏–∑–º–µ–Ω–∏—Ç—å —Å—Ç—Ä—É–∫—Ç—É—Ä—É –º–æ–∑–≥–∞.",
        "–ë–∞—Ö –∏ –ú–æ—Ü–∞—Ä—Ç –º–æ–≥—É—Ç —Å—Ç–∞—Ç—å —Å—Ç–∏–º—É–ª—è—Ç–æ—Ä–∞–º–∏ –¥–ª—è –º–æ–∑–≥–∞, —É–≤–µ–ª–∏—á–∏–≤–∞—è –µ–≥–æ –ø—Ä–æ–¥—É–∫—Ç–∏–≤–Ω–æ—Å—Ç—å.",
        "–ú–æ–∑–≥ –ø–æ–ª—É—á–∞–µ—Ç –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é —Å –ø–æ–º–æ—â—å—é –æ—Ä–≥–∞–Ω–æ–≤ —á—É–≤—Å—Ç–≤ ‚Äî –∑—Ä–µ–Ω–∏–µ, —Å–ª—É—Ö, –≤–∫—É—Å, –æ—Å—è–∑–∞–Ω–∏–µ –∏ –æ–±–æ–Ω—è–Ω–∏–µ."
    ]
    random_fact = random.choice(facts)
    bot.reply_to(message, random_fact)


questions = {
    "1. –ö–∞–∫–æ–π –æ—Ä–≥–∞–Ω –æ—Ç–≤–µ—á–∞–µ—Ç –∑–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ü–∏—é –¥–≤–∏–∂–µ–Ω–∏–π –∏ —Ä–∞–≤–Ω–æ–≤–µ—Å–∏–µ?": ("–°–ø–∏–Ω–Ω–æ–π –º–æ–∑–≥", "–ú–æ–∑–≥", "–°–µ—Ä–¥—Ü–µ"),
    "2. –ö–∞–∫–æ–π –∏–∑ –ø–µ—Ä–µ—á–∏—Å–ª–µ–Ω–Ω—ã—Ö –æ—Ä–≥–∞–Ω–æ–≤ —è–≤–ª—è–µ—Ç—Å—è —á–∞—Å—Ç—å—é —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–π –Ω–µ—Ä–≤–Ω–æ–π —Å–∏—Å—Ç–µ–º—ã?": (
    "–°–ø–∏–Ω–Ω–æ–π –º–æ–∑–≥", "–°–µ—Ä–¥—Ü–µ", "–õ—ë–≥–∫–∏–µ"),
    "3. –ö–∞–∫ –Ω–∞–∑—ã–≤–∞–µ—Ç—Å—è —Ç–∫–∞–Ω—å, –ø–æ–∫—Ä—ã–≤–∞—é—â–∞—è –º–æ–∑–≥ –∏ —Å–ø–∏–Ω–Ω–æ–π –º–æ–∑–≥?": ("–ú–µ–Ω–∏–Ω–≥", "–≠–ø–∏—Ç–µ–ª–∏–π", "–ü–µ—Ä–∏–∫–∞—Ä–¥"),
    "4. –ö–∞–∫–æ–π –æ—Ç–¥–µ–ª –≥–æ–ª–æ–≤–Ω–æ–≥–æ –º–æ–∑–≥–∞ –æ—Ç–≤–µ—Ç—Å—Ç–≤–µ–Ω–µ–Ω –∑–∞ —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å–µ—Ä–¥–µ—á–Ω–æ-—Å–æ—Å—É–¥–∏—Å—Ç–æ–π —Å–∏—Å—Ç–µ–º–æ–π?": (
    "–ü—Ä–æ–¥–æ–ª–≥–æ–≤–∞—Ç—ã–π –º–æ–∑–≥", "–ú–æ–∑–∂–µ—á–æ–∫", "–õ–æ–±–Ω–∞—è –¥–æ–ª—è"),
    "5. –°–∫–æ–ª—å–∫–æ –æ—Å–Ω–æ–≤–Ω—ã—Ö –æ—Ç–¥–µ–ª–æ–≤ –∏–º–µ–µ—Ç —á–µ–ª–æ–≤–µ—á–µ—Å–∫–∏–π –º–æ–∑–≥?": ("3", "1", "2")
}

user_answers = defaultdict(lambda: iter([]))
user_scores = defaultdict(int)


@bot.message_handler(commands=['quiz'])
def quiz_message(message):
    bot.send_message(message.chat.id,
                     '–ì–æ—Ç–æ–≤—ã –æ—Ç–≤–µ—Ç–∏—Ç—å –Ω–∞ –≤–æ–ø—Ä–æ—Å—ã? –ü–µ—Ä–µ—á–∏—Ç–∞–π—Ç–µ –º–∞—Ç–µ—Ä–∏–∞–ª –≤–Ω–∏–º–∞—Ç–µ–ª—å–Ω–æ, —á—Ç–æ–±—ã –≤—ã–ø–æ–ª–Ω–∏—Ç—å —Ç–µ—Å—Ç —É—Å–ø–µ—à–Ω–æ!')
    userid = message.chat.id
    user_answers[userid] = iter(questions.keys())
    user_scores[userid] = 0
    ask_question(message)


def ask_question(message):
    userid = message.chat.id
    try:
        question = next(user_answers[userid])
        correct, *incorrect = questions[question]

        # –°–æ–∑–¥–∞–µ–º —Å–ø–∏—Å–æ–∫ –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤ –æ—Ç–≤–µ—Ç–æ–≤
        options = [(correct, 'quiz_correct')] + [(ans, 'quiz_incorrect') for ans in incorrect]
        random.shuffle(options)  # –ü–µ—Ä–µ–º–µ—à–∏–≤–∞–µ–º —Å–ø–∏—Å–æ–∫

        # –°–æ–∑–¥–∞–µ–º –∫–Ω–æ–ø–∫–∏ —Å –ø–µ—Ä–µ–º–µ—à–∞–Ω–Ω—ã–º–∏ –≤–∞—Ä–∏–∞–Ω—Ç–∞–º–∏
        markup = InlineKeyboardMarkup(row_width=1)
        for option_text, callback_data in options:
            markup.add(InlineKeyboardButton(option_text, callback_data=callback_data))

        # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤–æ–ø—Ä–æ—Å —Å –∫–Ω–æ–ø–∫–∞–º–∏
        bot.send_message(userid, question, reply_markup=markup)

    except StopIteration:
        bot.send_message(userid, f'–í–∏–∫—Ç–æ—Ä–∏–Ω–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! –í–∞—à —Ä–µ–∑—É–ª—å—Ç–∞—Ç: {user_scores[userid]} –∏–∑ {len(questions)}')
        del user_answers[userid]
        del user_scores[userid]


@bot.callback_query_handler(func=lambda call: call.data.startswith('quiz'))
def answer(call):
    userid = call.message.chat.id
    if call.data == 'quiz_correct':
        bot.send_message(call.message.chat.id, '–ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç!')
        user_scores[userid] += 1
    else:
        bot.send_message(call.message.chat.id, '–ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç!')
    ask_question(call.message)
    # –£–¥–∞–ª—è–µ–º –∫–Ω–æ–ø–∫–∏ –ø–æ—Å–ª–µ –ø–µ—Ä–≤–æ–≥–æ –Ω–∞–∂–∞—Ç–∏—è
    bot.edit_message_reply_markup(call.message.chat.id, call.message.message_id, reply_markup=None)


bot.polling(none_stop=True)
